<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="@color/md_white"
    android:paddingTop="10dip">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        tools:context="com.luciferldy.someviews.MainApplication">

        <ImageView
            android:id="@+id/iv_rounded_bitmap"
            android:layout_width="@dimen/image_width"
            android:layout_height="@dimen/image_width"
            android:src="@drawable/doctor_strange"
            android:scaleType="centerCrop"
            style="@style/AppTheme.RoundedImageLayoutStyle" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="RoundedBitmapDrawable"
            style="@style/AppTheme.RoundedImageLayoutStyle"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:layout_marginLeft="50dip"
            android:layout_marginRight="50dip"
            android:background="@color/colorPrimary"
            style="@style/AppTheme.RoundedImageLayoutStyle"/>

        <ImageView
            android:id="@+id/iv_clip"
            android:layout_width="@dimen/image_width"
            android:layout_height="@dimen/image_width"
            android:src="@drawable/doctor_strange"
            android:scaleType="centerCrop"
            style="@style/AppTheme.RoundedImageLayoutStyle"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Clip Bitmap"
            style="@style/AppTheme.RoundedImageLayoutStyle"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:layout_marginLeft="50dip"
            android:layout_marginRight="50dip"
            android:background="@color/colorPrimary"
            style="@style/AppTheme.RoundedImageLayoutStyle"/>

        <ImageView
            android:id="@+id/iv_xfermode"
            android:layout_width="@dimen/image_width"
            android:layout_height="@dimen/image_width"
            android:src="@drawable/doctor_strange"
            android:scaleType="centerCrop"
            style="@style/AppTheme.RoundedImageLayoutStyle"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bitmap Xfermode"
            style="@style/AppTheme.RoundedImageLayoutStyle"/>
    </LinearLayout>
</ScrollView>

